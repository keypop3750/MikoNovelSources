<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Required feature for Miko to identify this as a novel extension -->
    <uses-feature android:name="yokai.novel.extension" android:required="true" />

    <application
        android:allowBackup="false"
        android:label="${extName}"
        android:supportsRtl="true">
        
        <!-- Extension metadata for Miko to discover -->
        <meta-data
            android:name="yokai.novel.extension.class"
            android:value="${extClass}" />
        <meta-data
            android:name="yokai.novel.extension.factory"
            android:value="${extFactory}" />
        <meta-data
            android:name="yokai.novel.extension.nsfw"
            android:value="${extNsfw}" />
            
    </application>

</manifest>
